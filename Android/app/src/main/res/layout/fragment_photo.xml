<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".PhotoFragment"
    android:id="@+id/frag_photo">

    <FrameLayout
        android:id="@+id/frame_location_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/llao_llao"
            android:adjustViewBounds="true"
            />

        <TextView
            android:id="@+id/tv_photo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 Raffles Boulevard,Marina Link"
            android:paddingLeft="8dp"
            android:layout_gravity="bottom"
            style="@style/BodyHeading"
            android:background="#07000000" />
    </FrameLayout>

    <LinearLayout
        android:layout_below="@+id/frame_location_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            style="@style/BodySubHeading"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            style="@style/BodySubHeading"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_location_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />


</RelativeLayout>
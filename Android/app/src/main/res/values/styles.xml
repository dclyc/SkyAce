<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
    </style>

    <style name="BodyTitle">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BodyHeading">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="BodySubHeading">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="BodyText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#dd000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BodyTextPrimary" parent="BodyText">
        <item name="android:textColor">#dd00bfa5</item>
    </style>
    <style name="BodyTextAccent" parent="BodyText">
        <item name="android:textColor">#89ff9100</item>
    </style>
    <style name="BodySnippet">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#8a000000</item>
    </style>
    <style name="tags" parent="BodySnippet">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
